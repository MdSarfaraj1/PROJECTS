<% layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3>Login:</h3><br>
        <form method="post" action="/user/login" class="needs-validation" novalidate>
            <div class="mb-3 ">
                <div>
                    <label for="username" class="form-label">UserName</label>
                <input type="text" name="username" id="username" class="form-control" required/>
                <div class="valid-feedback"> username is available</div><!--this class is for giving message while for valid things-->
                <div class="invalid-feedback"> Please choose a username. </div><!-- this class for giving message for invalid things-->
                </div>
                <div>
                    <label for="password" class="form-label">Password</label>
                <input type="text" name="password" id="password" class="form-control" required/>
                </div>
                <button class="btn btn-dark">Log In</button>
            </div>
            <div>
                <hr>New to airBnb?<hr>
                <a href="http://localhost:8080/user/signUp">Create Your account</a>
            </div>
            
        </form>
    </div> 
</div>