<% layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    <div class="col-8 offset-2">  <!-- take 8 column but skip 2 from left-->
        <h3>Listings Details:</h3>
     </div>
    <div class="card col-7 offset-2">
        <img src="<%=data.image.url%>" class="card-img-top show-big-image" alt="image">
  <div class="card-body">
    <p class="card-text"><b><%=data.title%></b></p>
    <%=data.description%><br>
    &#8377;<%=data.price.toLocaleString('en-IN')%><br>
    <%=data.location%><br>
    <%=data.country%><br>
    <div class="row">
        <div class="col-3">
              <form method="get" action="/listings/<%=data._id%>/update"></form>
        <button class="btn btn-dark mb-3 mt-2" >UPDATE Listing</button>
    </form>     
        </div>
<div class="col-8 mt-2">

     <form method="get" action="/listings/<%=data._id%>/delete">
        <button class="btn btn-dark">Delete Listing</button>
    </form> 
</div>
   
   
    </div>
    
  </div>
    </div>
    

</div>
